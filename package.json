{
  "name": "socialnotsocial",
  "version": "0.0.1",
  "description": "Social + not social posting.",
  "main": "build/server.js",
  "scripts": {
    "start": "run-p _start:mainserver _start:apiserver",
    "_start:mainserver": "nodemon -w build/server.js",
    "_start:apiserver": "nodemon build/apiserver/server.js -w build/apiserver/server.js",
    "dev": "run-p watch lint serve",
    "test": "mocha --recursive --compilers js:babel-core/register",
    "build": "run-s build:*",
    "clean": "rimraf build",
    "serve": "npm start",
    "watch": "run-p watch:*",
    "lint": "run-p lint:js _watch:lint:js",
    "mkdir": "mkdirp build",
    "clean:html": "rimraf build/public/index.html",
    "mkdir:html": "run-s mkdir",
    "build:html": "run-s clean:html mkdir:html _build:html",
    "_build:html": "cpr src/index.html build/public/index.html",
    "watch:html": "run-s build:html _watch:html",
    "_watch:html": "chokidar src/index.html -c \"npm run build:html\"",
    "clean:js": "rimraf build/public/js",
    "mkdir:js": "mkdirp build/public/js",
    "build:js": "run-s clean:js mkdir:js _build:js",
    "_build:js": "run-p _build:js:server _build:js:apiserver _build:js:client",
    "_build:js:server": "webpack --config webpack.server.config.js",
    "_build:js:client": "webpack --config webpack.client.config.js",
    "_build:js:apiserver": "webpack --config webpack.apiserver.config.js",
    "watch:js": "run-s build:js _watch:js",
    "_watch:js": "run-p _watch:js:server _watch:js:client _watch:js:apiserver",
    "_watch:js:server": "webpack --config webpack.server.config.js --watch",
    "_watch:js:client": "webpack --config webpack.client.config.js --watch",
    "_watch:js:apiserver": "webpack --config webpack.apiserver.config.js --watch",
    "lint:js": "eslint ./src --ext .js --ext .jsx --cache || true",
    "_watch:lint:js": "chokidar 'src/**/*.jsx' 'src/**/*.js' -c \"npm run lint:js\"",
    "clean:css": "rimraf build/public/css",
    "mkdir:css": "run-s mkdir",
    "build:css": "run-s clean:css mkdir:css _build:css",
    "_build:css": "cpr src/css build/public/css",
    "watch:css": "run-s build:css _watch:css",
    "_watch:css": "chokidar src/css/**/* -c \"npm run build:css\"",
    "mkdir:assets": "run-s mkdir",
    "clean:assets": "rimraf build/public/assets",
    "build:assets": "run-s clean:assets mkdir:assets _build:assets",
    "_build:assets": "cpr src/assets build/public/assets",
    "watch:assets": "run-s build:assets _watch:assets",
    "_watch:assets": "chokidar src/assets/**/* -c \"npm run build:assets\"",
    "watch:git": "chokidar * -c \"git diff --shortstat\""
  },
  "author": "Mark Williams <mark@mdfw.me>",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-react": "^1.0.0",
    "babel-plugin-react-intl": "^2.3.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.1",
    "chokidar-cli": "^1.2.0",
    "cpr": "^2.0.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "http-server": "^0.9.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.0.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "base58": "^0.1.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.15.2",
    "connect-redis": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-brute": "^1.0.1",
    "express-session": "^1.14.2",
    "fbgraph": "^1.3.0",
    "generate-password": "^1.3.0",
    "helmet": "^3.3.0",
    "http-proxy": "^1.16.2",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.2.1",
    "material-ui": "^0.16.7",
    "mongoose": "^4.7.6",
    "morgan": "^1.7.0",
    "nodemailer": "^2.7.0",
    "npm-run-all": "^3.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "react": "^15.4.2",
    "react-autosize-textarea": "^0.3.6",
    "react-cookie": "^1.0.4",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "redis": "^2.6.3",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^1.0.0",
    "redux-thunk": "^2.1.0",
    "serve-favicon": "^2.3.2",
    "validator": "^6.2.1"
  }
}
